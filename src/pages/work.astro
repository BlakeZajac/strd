---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProjectGrid from "../components/ProjectGrid.astro";
import {
  getWorkIndexDescription,
  getWorkIndexSchema,
  getWorkIndexTitle,
} from "../lib/work";
---

<Layout
  title={getWorkIndexTitle()}
  description={getWorkIndexDescription()}
  schema={getWorkIndexSchema()}
>
  <Hero title="Selected work" />

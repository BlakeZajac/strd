---
import VideoImageBackground from "./VideoImageBackground.astro";
import ButtonGroup from "./ButtonGroup.astro";

interface Props {
    title: string;
    content?: string;
    imageSrcLandscape?: string;
    imageSrcPortrait?: string;
    imageAlt?: string;
    videoSrc?: string;
    primaryButton?: {
        label: string;
        url: string;
        target?: string | "_self";
    };
    secondaryButton?: {
        label: string;
        url: string;
        target?: string | "_self";
    };
}

const {
    title,
    content,
    imageSrcLandscape,
    imageSrcPortrait,
    imageAlt,
    videoSrc,
    primaryButton,
    secondaryButton,
} = Astro.props;
---

<div class="banner-post u-inset">
    <VideoImageBackground
        imageSrcLandscape={imageSrcLandscape}
        imageSrcPortrait={imageSrcPortrait}
        imageAlt={imageAlt}
        videoSrc={videoSrc}
    />

    <div class="banner-post__container l-container">
        <div class="banner-post__content">
            <h1 class="banner-post__title">
                {title}
            </h1>

            {content && <p class="banner-post__description">{content}</p>}
        </div>

        <ButtonGroup
            className="banner-post__button-group"
            primaryButton={primaryButton}
            secondaryButton={secondaryButton}
        />
    </div>
</div>
